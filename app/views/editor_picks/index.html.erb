<p id="notice"><%= notice %></p>

<h1>Listing Editor Picks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Ontop</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @editor_picks.each do |editor_pick| %>
      <tr>
        <td><%= editor_pick.name %></td>
        <td><%= editor_pick.image %></td>
        <td><%= editor_pick.onTop %></td>
        <td><%= editor_pick.description %></td>
        <td><%= link_to 'Show', editor_pick %></td>
        <td><%= link_to 'Edit', edit_editor_pick_path(editor_pick) %></td>
        <td><%= link_to 'Destroy', editor_pick, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

